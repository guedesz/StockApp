<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_nav"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.stockapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/fragment_product_item"
        android:name="com.example.stockapp.ui.products.item.ProductItemFragment"
        android:label="fragment_product_item"
        tools:layout="@layout/fragment_product_item" />
    <fragment
        android:id="@+id/fragment_products"
        android:name="com.example.stockapp.ui.products.ProductsFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_products" >
        <action
            android:id="@+id/action_fragment_products_to_productItemDetailFragment"
            app:destination="@id/productItemDetailFragment"
            app:popUpTo="@id/fragment_products"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/productItemDetailFragment"
        android:name="com.example.stockapp.ui.products.details.ProductItemDetailFragment"
        android:label="fragment_product_item_detail"
        tools:layout="@layout/fragment_product_item_detail" >
        <action
            android:id="@+id/action_productItemDetailFragment_to_fragment_products"
            app:destination="@id/fragment_products" />
<!--            app:popUpTo="@id/fragment_products"-->
<!--            app:popUpToInclusive="true" />-->
        <!-- Add the following lines to clear the back stack -->
    </fragment>
</navigation>